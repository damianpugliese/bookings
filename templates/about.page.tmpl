{{template "base" .}}

{{define "title"}}
  About
{{end}}

{{define "content"}}
  <div class="container">
    <div class="row">
      <div class="col">
        <h1>This is the about page</h1>
        <p>This is some text</p>

        <p>This came from the template: {{index .StringMap "test"}}</p>

        <p>
          {{if ne (index .StringMap "remote_ip") ""}}
            Your roemote IP is: {{index .StringMap "remote_ip"}}
          {{else}}
            Your remote IP is not set. Visit the <a href="/">Home page</a> to set it.
          {{end}}
        </p>
      </div>
    </div>
  </div>
{{end}}